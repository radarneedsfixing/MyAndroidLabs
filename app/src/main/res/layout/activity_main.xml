<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Declare your data variable(s) here if you have any -->
        <!-- For example, if you have a ViewModel for the layout -->
        <!--<variable
            name="viewModel"
            type="com.example.yourapp.YourViewModel" />-->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!-- Your views and widgets go here -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type City Name: " />

        <EditText
            android:id="@+id/cityTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Type City Name " />

        <Button
            android:id="@+id/forecastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Forecast" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp goes here"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/maxTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max goes here"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/minTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Min goes here"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity goes here"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description goes here"
            android:visibility="invisible"/>

    </LinearLayout>
</layout>
